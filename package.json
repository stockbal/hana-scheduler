{
  "name": "hana-scheduler",
  "version": "1.0.0",
  "description": "HANA-Cloud scheduler",
  "repository": "https://github.com/stockbal/hana-scheduler",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "dotenv": "^16.0.3",
    "envfile": "^6.18.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": "^14.18"
  },
  "scripts": {
    "postinstall": "npx husky install",
    "build:free": "npx -p mbt mbt build --mtar archive -e config/deploy/free.mtaext",
    "build:trial": "npx -p mbt mbt build --mtar archive -e config/deploy/trial.mtaext",
    "test:schedule": "cd src && npm start",
    "test": "cd src && npm test",
    "gen:env": "cf de hana-scheduler-srv && ts-node util/generate-env.ts",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 0",
    "lint": "eslint . --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.{css,json,yml}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "prettier",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  }
}
