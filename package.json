{
  "name": "hana-scheduler",
  "version": "1.0.0",
  "description": "HANA-Cloud scheduler",
  "repository": "https://github.com/stockbal/hana-scheduler",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "envfile": "^6.18.0",
    "husky": "^8.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": "^14.18"
  },
  "scripts": {
    "postinstall": "npx husky install",
    "build": "npx -p mbt mbt build",
    "test": "cd src && npm start",
    "gen:env": "cf de hana-scheduler-srv && ts-node util/generate-env.ts",
    "deploy": "cf deploy mta_archives/hana-scheduler_1.0.0.mtar --retries 0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "trailingComma": "none"
  }
}
